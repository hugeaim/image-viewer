{
  "name": "image-viewer",
  "version": "1.1.0",
  "productName": "Image Viewer",
  "description": "Image Viewer gives you quick and easy access to your local Photos and Videos. Browse and navigate through images/videos with ease by using the arrow keys.",
  "main": "main.js",
  "dependencies": {
    "lodash": "^3.10.1"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron-builder": "^19.30.2",
    "electron-packager": "^9.1.0",
    "electron-prebuilt": "^1.4.13"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager . \"Image Viewer\" --out=dist/osx --platform=darwin --arch=x64 --icon=assets/osx/icon.icns",
    "build:win": "npm run clean:win && electron-packager . \"Image Viewer\" --out=dist/win --platform=win32 --arch=ia32 --icon=assets/win/icon.ico",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder \"dist/osx/Image Viewer-darwin-x64/Image Viewer.app\" --platform=osx --out=\"dist/osx\"  --config=packager.json",
    "pack:win": "npm run build:win && electron-builder \"dist/win/Image Viewer-win32-ia32\" --platform=win --out=\"dist/win\" --config=packager.json",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "yyosifov.imageviewer",
    "mac": {
      "category": "yyosifov.imageviewer",
      "target": [
        "dmg"
      ]
    }
  },
  "author": "Yosif Yosifov",
  "license": "ISC"
}
